{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:react/recommended", "standard-with-typescript", "import-helpers", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          ["/^react$/", "/^react-native$/"],
          "module",
          ["/(contexts)/", "/(hooks)/"],
          ["/layouts/", "/(layouts)/"],
          ["/components/", "/(components)/"],
          ["/services/", "/(services)/"],
          ["/lib/", "/(lib)/"],
          ["/utils/", "/(utils)/"],
          ["/config/", "/(config)/"],
          ["/types/", "/(types)/"],
          ["/styles/", "/(styles)/"],
          ["/data/", "/(data)/"],
          ["/assets/", "/(assets)/"]
        ],
        "alphabetize": { "order": "desc", "ignoreCase": true }
      }
    ]
  }
}
